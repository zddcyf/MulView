<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义textview的属性-->
    <declare-styleable name="MulTextView">
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftTextSize" format="integer" />
        <attr name="leftMargin" format="dimension" />
        <attr name="isLeftDrawable" format="boolean" />
        <attr name="leftDrawable" format="reference" />
        <attr name="leftDrawablePadd" format="dimension" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightTextSize" format="integer" />
        <attr name="rightMargin" format="dimension" />
        <attr name="isRightDrawable" format="boolean" />
        <attr name="rightDrawable" format="reference" />
        <attr name="rightDrawablePadd" format="dimension" />
        <attr name="isLine" format="boolean" />
    </declare-styleable>

    <!-- 自定义开关的属性 -->
    <declare-styleable name="MulSwitchView">
        <attr name="switchLeftBg" format="reference" />
        <attr name="switchRightBg" format="reference" />
        <attr name="switchBtnLeftBg" format="reference" />
        <attr name="switchBtnRightBg" format="reference" />
        <attr name="switchBtnWH" format="dimension" />
        <attr name="switchBtnPadd" format="dimension" />
        <attr name="switchOpenOrClose" format="boolean" />
        <attr name="switchAniTime" format="integer" />
    </declare-styleable>
</resources>
