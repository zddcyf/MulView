<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/switchLeftImageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/switchRightImageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/switchBtnLeftImageBg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/switchLeftImageBg"
        android:layout_alignTop="@id/switchLeftImageBg" />

    <ImageView
        android:id="@+id/switchBtnRightImageBg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/switchLeftImageBg"
        android:layout_alignTop="@id/switchLeftImageBg" />

</RelativeLayout>